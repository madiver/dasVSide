{
  "name": "das-hotkey-tools",
  "publisher": "das-hotkey-tools",
  "displayName": "DAS Hotkey Tools",
  "description": "Import, edit, lint, and compile DAS Trader hotkeys with .das scripts and keymap.yaml.",
  "icon": "images/icon.png",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/mark/dasVSide.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:dasHotkeyTools.buildHotkeyFile",
    "onCommand:dasHotkeyTools.lintScripts",
    "onCommand:dasHotkeyTools.importHotkeyFile",
    "onCommand:dasHotkeyTools.analyzeDependencies",
    "onCommand:dasHotkeyTools.showCallers",
    "onCommand:dasHotkeyTools.showCallees"
  ],
  "contributes": {
    "commands": [
      {
        "command": "dasHotkeyTools.buildHotkeyFile",
        "title": "DAS: Build Hotkey File"
      },
      {
        "command": "dasHotkeyTools.lintScripts",
        "title": "DAS: Lint Scripts"
      },
      {
        "command": "dasHotkeyTools.importHotkeyFile",
        "title": "DAS: Import Hotkey File"
      },
      {
        "command": "dasHotkeyTools.analyzeDependencies",
        "title": "DAS: Analyze Dependencies"
      },
      {
        "command": "dasHotkeyTools.showCallers",
        "title": "DAS: Show Callers"
      },
      {
        "command": "dasHotkeyTools.showCallees",
        "title": "DAS: Show Callees"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dasHotkeyTools.dependencyTree",
          "name": "DAS Dependencies"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "dasHotkeyTools.showCallers",
          "when": "resourceLangId == das",
          "group": "navigation"
        },
        {
          "command": "dasHotkeyTools.showCallees",
          "when": "resourceLangId == das",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "das",
        "aliases": [
          "DAS",
          "DAS Script"
        ],
        "extensions": [
          ".das"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "das",
        "scopeName": "source.das",
        "path": "./syntaxes/das.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "DAS Hotkey Tools",
      "properties": {
        "dasHotkeyTools.outputPath": {
          "type": "string",
          "default": "output.htk",
          "order": 1,
          "markdownDescription": "Absolute or workspace-relative path where the generated `Hotkey.htk` file will be written. Must be set to a writable location.",
          "scope": "resource"
        },
        "dasHotkeyTools.appendTimestampToOutput": {
          "type": "boolean",
          "default": false,
          "order": 2,
          "markdownDescription": "Append a local timestamp (YYYYMMDD-HHmmss) to the output filename during builds.",
          "scope": "resource"
        },
        "dasHotkeyTools.liveAccount": {
          "type": "string",
          "default": "",
          "order": 20,
          "markdownDescription": "User-level Live Account identifier used to replace `%%LIVE%%` tokens during builds.",
          "scope": "application"
        },
        "dasHotkeyTools.simulatedAccount": {
          "type": "string",
          "default": "",
          "order": 21,
          "markdownDescription": "User-level Simulated Account identifier used to replace `%%SIMULATED%%` tokens during builds.",
          "scope": "application"
        },
        "dasHotkeyTools.linting.enabled": {
          "type": "boolean",
          "default": true,
          "order": 10,
          "markdownDescription": "Enable advisory linting for DAS scripts.",
          "scope": "resource"
        },
        "dasHotkeyTools.linting.debounceMs": {
          "type": "number",
          "default": 400,
          "order": 12,
          "markdownDescription": "Debounce interval in milliseconds for linting on edit.",
          "scope": "resource"
        },
        "dasHotkeyTools.linting.maxFiles": {
          "type": "number",
          "default": 200,
          "order": 13,
          "markdownDescription": "Maximum number of .das files to lint per run.",
          "scope": "resource"
        },
        "dasHotkeyTools.linting.maxChainDepth": {
          "type": "number",
          "default": 8,
          "order": 14,
          "markdownDescription": "Maximum ExecHotkey call depth before a warning is emitted.",
          "scope": "resource"
        },
        "dasHotkeyTools.linting.lintOnBuild": {
          "type": "boolean",
          "default": false,
          "order": 11,
          "markdownDescription": "Run advisory linting during builds (warnings only, non-blocking).",
          "scope": "resource"
        },
        "dasHotkeyTools.linting.ruleOverrides": {
          "type": "object",
          "default": {},
          "order": 15,
          "markdownDescription": "Override lint rule severities per rule id (info, warning, error, off).",
          "additionalProperties": {
            "type": "string"
          },
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "node ./scripts/package-vsce.mjs",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
